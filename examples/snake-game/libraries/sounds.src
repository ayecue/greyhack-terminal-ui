// Start background music (looping)
Sounds.startMusic = function()
    nl = char(10)
    ui = "var s = Sound.get(""bgMusic"")" + nl
    ui = ui + "s.setLoop(true)" + nl
    ui = ui + "s.play()" + nl
    print("#UI{" + ui + "}")
end function

// Stop background music
Sounds.stopMusic = function()
